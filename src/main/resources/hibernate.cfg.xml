<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "classpath://org/hibernate/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost/mydatabase</property>
		<property name="hibernate.connection.username">berard</property>
		<property name="hibernate.connection.password">test1234</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<property name="hibernate.current_session_context_class">thread</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="connection.pool_size">5</property>
		<property name="hibernate.connection.pool_size">5</property>
		<!-- Mapping Classes to do
		<mapping class="entity.User" />
		-->
	</session-factory>
</hibernate-configuration>
